{
  "version": "0.0.0.1",
  "manifest_version": 2,
  "name": "Pigeon",
  "description": "Extension to make link sharing fun.",
  "content_scripts": [],
  "background": {
    "scripts": ["lib/js/browser-polyfill.js", "background.js"]
  },
  "browser_action": {
    "default_icon": "img/icons/icon@48.png",
    "default_popup": "popup.html"
  },
  "permissions": ["storage", "unlimitedStorage", "tabs", "notifications"],
  "icons": {
    "128": "img/icons/icon@128.png",
    "48": "img/icons/icon@48.png",
    "16": "img/icons/icon@16.png"
  }
}
